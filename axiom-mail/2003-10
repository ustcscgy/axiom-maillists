//=20
// septembre 2003=20
//=20
// recherche des matrices magiques d'ordre impair=20
// =E0 partir de l'=E9preuve du CAPES externe de 1999 (5-eme partie)
//

export (linalg) ;

//
// la somme des n lignes est 1+2+...+n^2 ; d'o=F9 la somme d'une ligne.
//
sommeTheorique :=3D n -> (n*(n^2+1))/2 ;=20

//
// Somme d'une ligne, d'une colonne et de la diagonale secondaire
//
sommeLignei :=3D (M, i) -> _plus (M[i,k] $k=3D1..nrows(M)) ;
sommeColi   :=3D (M, i) -> _plus (M[k,i] $k=3D1..nrows(M)) ;
antitrace   :=3D M      -> _plus (M[nrows(M)-k+1,k] $k=3D1..nrows(M)) ;
ensCoeff    :=3D M      -> {M[i,j] $i=3D1..nrows (M) $j=3D1..ncols (M)} ;=
=20

//
// Les diff=E9rents tests =E0 effectuer pour tester si une matrice est ma=
gique.
//
estMagique :=3D=20
M ->     bool (nrows (M)=3Dncols (M))=20
    and _and (bool (sommeLignei (M,i) =3D sommeTheorique (nrows (M)))=20
	                                                   $i=3D1..nrows (M))
    and _and (bool (sommeColi (M,i) =3D sommeTheorique (nrows (M)))
					                   $i=3D1..nrows (M))
    and bool (tr (M) =3D sommeTheorique (nrows (M)))
    and bool (antitrace (M) =3D sommeTheorique (nrows (M))
    and bool (ensCoeff (M) =3D {$1..nrows(M)^2}))
=09
//
// Peut se simplifier en montrant que l'ensemble des sommes des lignes, d=
es
// colonnes et des diagonales est un singleton.
//
estMagique :=3D=20
M ->    bool (nrows (M)=3Dncols (M))=20
    and bool (card ({sommeLignei (M,i) $i=3D1..nrows (M), =20
	             sommeColi   (M,i) $i=3D1..nrows (M),
                     tr (M), antitrace (M)}) =3D 1)
    and bool (ensCoeff (M) =3D {$1..nrows(M)^2})
//
// Un exemple de matrice magique
//
M3 :=3D matrix ([[4,3,8],[9,5,1],[2,7,6]]) ;
estMagique (M3) ;

//
// Calculs valables pour n premier avec 3 uniquement
// numlib::igcdmult (3,n)[2] est le coefficient de l'=E9quation de B=E9zo=
ut=20
// associ=E9 =E0 3 dans 3x + ny =3D 1 ; c'est l'inverse modulo n de 3.
//
// Le calcul (X - 1 mod n) + 1 calcule la congruence comprise entre 1 et =
n.
//
// La fonction beta est r=E9serv=E9e par le syst=E8me en analyse complexe=
.
//
alpha :=3D (i,j,n) -> (numlib::igcdmult(3,n)[2]*(2*i-j) - 1 mod n) + 1 ;
betaa :=3D (i,j,n) -> (numlib::igcdmult(3,n)[2]*(2*j-i) - 1 mod n) + 1 ;

//
// Une autre possibilit=E9 consiste =E0 calculer=20
// expr (1 / (Dom::IntergerMod (n)(3)) pour calculer m (cf =E9nonc=E9 et =
corrig=E9)
// ou solve (3*m=3D1, m, Domain=3DDom::IntergerMod (n))
//
// Une derni=E8re possibilit=E9 utilise linsolve en pr=E9cisant en troisi=
=E8me=20
// argument Domain=3DDom::IntergerMod (n)
//

//
// Ces sommes sont constantes car la fonction alpha(.,j,n) r=E9ordonne
// tous les i entre 1 et n
//
[_plus(alpha (i,j,7) $i=3D1..7) $j=3D1..7] ;
	 =20
//
// Construction de la matrice W =E9num=E9r=E9e dans l'ordre=20
//
matriceW :=3D n -> matrix (n,n,(i,j)->n*(i-1)+j) ;

//
// Construction de la matrice magique G
//=20
matriceG :=3D n -> matrix (n,n,(i,j)->(alpha(i,j,n)-1)*n+betaa(i,j,n));

//
// V=E9rification que les sommes sur les sous-diagonales et=20
// les anti-sous-diagonales sont constantes.=20
//

//
// Construction d'une matrice magique =E0 partir de deux matrices magique=
s
//
produitMagique :=3D=20
(A,B) ->=20
  matrix(nrows(A)*nrows(B),nrows(A)*nrows(B),
	 (u,v)->            A[(u-1 mod nrows(A))+1,(v-1 mod nrows(A))+1]
	      + nrows(A)^2*(B[(u-1 div nrows(A))+1,(v-1 div nrows(A))+1]-1)) ;

//
// Quelques v=E9rifications de matrices magiques
//
estMagique (produitMagique (M3,M3)) ;
estMagique (produitMagique (M3,matriceG(5))) ;
estMagique (produitMagique (matriceG(5),matriceG(7))) ;

////////////////////////////////////////////////////////////////////////

//
// Calcul du polyn=F4me minimal de la matrice A=20
//
// 1/ =C9tude du rang des familles de matrices (A^k) pour k variant de 1 =
=E0 p.
// 2/ Construction du polyn=F4me minimal unitaire
//
// 1/ Recherche du rang =3D max (p tq (A^k)k=3D0..p est libre)=20
//
// Correspond =E0 la biblioth=E8que de calcul de l'alg=E8bre lin=E9aire
//
export (linalg) ;

//
// Un exemple de matrice
//
M :=3D matrix ([[1, 2, 3], [3, 3, 3], [3, 2, 1]]) ;=20

//
// Transforme une matrice en vecteur et r=E9ciproquement pour appliquer
// les fonctions usuelles de l'alg=E8bre lin=E9aire : calcul du rang et c=
o.
//
matrice2vecteur :=3D M -> matrix ([M[i,j] $j=3D1..ncols(M) $i=3D1..nrows(=
M)]) ;
vecteur2matricebr :=3D (V, n) -> [[V[i+k*n] $i=3D1..n] $k=3D0..n-1] ;=20
vecteur2matrice :=3D V -> matrix (vecteur2matricebr (V, sqrt (vecdim (V))=
)) ;
//
// Test de v=E9rification
//
bool (vecteur2matrice (matrice2vecteur (M)) =3D M) ;=20
//
// Cette fonction calcule successivement le rang des famille (A^k)k=3D0..=
p
// et renvoie la derni=E8re (c'est-=E0-dire la plus grande) des valeurs d=
e p
// pour laquelle la famille est libre : c'est la valeur pr=E9c=E9dente p =
pour
// lequel la famille est li=E9e.
//
rangM :=3D proc (M) local p ;
  begin
    p :=3D 0 ;
    while (nops (basis ([matrice2vecteur (M^k) $k=3D0..p])) =3D p+1)=20
       do p :=3D p+1 end_while ;=20
    p-1=20
  end ;=20
//
// Tests de v=E9rification
//
rangM (M) ;                                      // r=E9ponse 2
rangM (matrix ([[i+j+1 $i=3D1..5] $j=3D1..5])) ;     // r=E9ponse 2
rangM (matrix ([[i+j+1 $i=3D1..5] $j=3D1..5])) ;     // r=E9ponse 2
rangM (matrix ([[(i+j)^3 $i=3D1..5] $j=3D1..5])) ;   // r=E9ponse 4
//
// Autre m=E9thode de calcul de rangM
// La liste L contient la liste des vecteurs associ=E9s aux matrices M^k
//
rangMa  :=3D M -> rangMbr (M, [matrice2vecteur (M^0)]) ;
rangMbr :=3D (M, L) ->=20
  if nops (L) =3D nops (basis (L))=20
    then rangMbr (M, [matrice2vecteur (M^(nops (L)))].L)
    else nops (L)-2=20
  end_if ;=20
//
// Tests de v=E9rification
//
rangMa (M) ;                                      // r=E9ponse 2
rangMa (matrix ([[i+j+1 $i=3D1..5] $j=3D1..5])) ;     // r=E9ponse 2
rangMa (matrix ([[i+j+1 $i=3D1..5] $j=3D1..5])) ;     // r=E9ponse 2
rangMa (matrix ([[(i+j)^3 $i=3D1..5] $j=3D1..5])) ;   // r=E9ponse 4
//
//
// 2/ Construction du polyn=F4me minimal unitaire
//
//
// But : rechercher de proche en proche le plus petit des p=20
// tel que la matrice M^p est combinaison lin=E9aire des M^k pr=E9c=E9den=
ts
// Les calculs n'ont pas lieu sur les matrices mais sur les vecteurs asso=
ci=E9s
//
PolMiniM :=3D proc (M) local p, S, b, a_continuer ;
  begin
    p :=3D 1 ;
    a_continuer :=3D TRUE ;=20
    S :=3D matrice2vecteur (M^0) ;=20
    RES :=3D [] ;=20
    while RES =3D []=20
      do=20
        b :=3D matrice2vecteur (M^p) ;=20
        RES  :=3D matlinsolve (S, b, Unique) ;  =20
        S :=3D S.b ;
        p :=3D p+1 ;
     end_while ;
    X^(p-1) - _plus (RES[i]*X^(i-1) $i=3D1..vecdim (RES)) ;=20
  end_proc ;
//
// Le param=E8tre Unique =E0 matlinsolve renvoie soit la seule=20
// solution du syst=E8me lin=E9aire soit [].
// L'op=E9rateur . concat=E8ne matrices et vecteurs=20
// et augmente le nombre de colonnes.
// Les coordonn=E9es du vecteur solution sont les coefficients de X^(k-1)
// dans le polyn=F4me minimal.
//
Res :=3D PolMiniM (M) ;=20
_plus (coeff (Res, X, k) * M^k $k=3D0..ncols (M)) ;=20

M1 :=3D matrix ([[i+j+1 $i=3D1..5] $j=3D1..5]) ;
M2 :=3D matrix ([[i+j+1 $i=3D1..5] $j=3D1..5]) ;
M3 :=3D matrix ([[(i+2*j)^3 $i=3D1..5] $j=3D1..5]) ; =20
//
// V=E9rification : le r=E9sultat est la matrice nulle.
// Le polyn=F4me calcul=E9 est bien le polyn=F4me minimal.
//
Res :=3D PolMiniM (M1) ;=20
_plus (coeff (Res, X, k) * M1^k $k=3D0..ncols (M1)) ;=20

Res :=3D PolMiniM (M2) ;=20
_plus (coeff (Res, X, k) * M2^k $k=3D0..ncols (M2)) ;=20

Res :=3D PolMiniM (M3) ;=20
_plus (coeff (Res, X, k) * M3^k $k=3D0..ncols (M3)) ;=20

PolMiniMb :=3D M -> PolMiniMbr (M, [], matrice2vecteur (M^0), 1) ;

PolMiniMbr :=3D (M, R, S, p)=20
  -> if R=3D[]=20
        then=20
          PolMiniMbr (M, matlinsolve (S, matrice2vecteur (M^p), Unique),
                      S.matrice2vecteur(M^p), p+1)
        else R
      end_if ;=20

PolMiniMb (M1) ;

Res :=3D PolMiniM (M1) ;=20
_plus (coeff (Res, X, k) * M1^k $k=3D0..ncols (M1)) ;=20




