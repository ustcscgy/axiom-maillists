BR Gernot 


<----- begin code ------->
#include "axiom.as"
#pile 

INT ==> Integer;
NNI ==> NonNegativeInteger;
SI ==> SingleInteger;
PI ==> PositiveInteger; 

test(i: INT):INT == {
 import from INT, SI, PI, NNI; 

 -- INT -> all
 si1:SI := i::SI;
 pi1:PI := i::PI;
 nni1:NNI := i::NNI; 

 -- SI -> all
 int2:INT := si1::INT;
 pi2:PI := si1::PI;
 nni2:NNI := si1::NNI; 

 --> NNI -> all
 int3:INT := nni1::INT;
 pi3:PI := nni1::PI;
 si2:SI := nni1::SI; 

 i;
}
<----- end code -------> 


