-AXIOM=/usr/local/axiom/mnt/fedora5
-TANGLE=${AXIOM}/bin/lib/notangle
-WEAVE=${AXIOM}/bin/lib/noweave 
-LATEX=latex
-MAKEINDEX=makeindex
-DVIPS=dvips -Ppdf
-PS2PDF=ps2pdf
-RM=rm -f
